root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = false
trim_trailing_whitespace = true

[*.{json, md}]
indent_size = 2
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true
max_line_length = 120

[*.{js,ts}]
indent_size = 2
indent_style = space
insert_final_newline = false
tab_width = 2
trim_trailing_whitespace = true
max_line_length = 120